{
  "require": {
    "craftcms/cms": "3.1.22",
    "vlucas/phpdotenv": "^2.4.0",
    "wbrowar/adminbar": "3.1.6",
    "craftcms/redactor": "2.3.2",
    "craftcms/commerce": "2.1.3.1",
    "craftcms/contact-form": "2.2.4",
    "rias/craft-contact-form-extensions": "1.1.5",
    "doublesecretagency/craft-smartmap": "3.2.2.1"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
