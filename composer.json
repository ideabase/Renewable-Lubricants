{
  "require": {
    "craftcms/cms": "3.4.5",
    "vlucas/phpdotenv": "^2.4.0",
    "craftcms/redactor": "2.6.0",
    "craftcms/commerce": "3.0.6",
    "craftcms/contact-form": "2.2.6",
    "rias/craft-contact-form-extensions": "1.2.0",
    "doublesecretagency/craft-smartmap": "3.2.2.1",
    "digital-pros/commerce-authorize": "1.0.9"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
