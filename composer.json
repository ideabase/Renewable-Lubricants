{
  "require": {
    "craftcms/cms": "3.4.22.1",
    "vlucas/phpdotenv": "^2.4.0",
    "craftcms/redactor": "2.6.1",
    "craftcms/commerce": "3.1.7",
    "craftcms/contact-form": "2.2.7",
    "doublesecretagency/craft-smartmap": "3.3.2",
    "digital-pros/commerce-authorize": "1.0.12",
    "hybridinteractive/craft-contact-form-extensions": "1.2.1"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
