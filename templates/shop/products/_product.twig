{% extends '_layouts/shop' %}

{% block content %}
  <div class="mt-8">
    <a href="{{ url('shop/products') }}">&larr; All products</a>
  </div>
  <div class="flex -mx-6 mt-8 product-details">
    <div class="w-1/2 mx-6 p-8">
      {% if product.productImage|length %}
        <img src="{{ product.productImage.one().url }}" alt="{{ product.productImage.one().title }}">
      {% endif %}
    </div>
    <div class="w-1/2 mx-6 p-8">
      <h1>{{ product.title }}</h1>
      <form method="POST">
        <input type="hidden" name="action" value="commerce/cart/update-cart">
        {{ redirectInput('shop/cart') }}
        <input type="hidden" name="qty" value="1">
        {{ csrfInput() }}
        <div class="field">
          <select name="purchasableId">
            {% for purchasable in product.variants %}
              <option {% if purchasable.stock <= 0 and purchasable.hasUnlimitedStock == false %}disabled {% endif %}value="{{ purchasable.id }}">{{ purchasable.sku }} {{ purchasable.description }} {{ purchasable.price|commerceCurrency(cart.currency) }}</option>
            {% endfor %}
          </select>

        </div>
        <div class="buttons">
          <input type="submit" value="{{ "Add to cart"|t }}" class="button">
          {{ product.body }}
        </div>
      </form>
    </div>
  </div>

  <h3>Available Grades / Sizes</h3>
  <ul>
    <li>8 oz.
    {% for file in product.files.all() %}
      <a href="{{file.url}}">SDS Sheet (PDF)</a>
    {% endfor %}
    </li>
    <li>16 oz.
    {% for file in product.files.all() %}
      <a href="{{file.url}}">SDS Sheet (PDF)</a>
    {% endfor %}
    </li>
  </ul>
{% endblock %}
