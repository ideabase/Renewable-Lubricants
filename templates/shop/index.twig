{% extends "_layouts/main" %}

{% block content %}
  <div id="products-featured">
    <div class="flex">
      <h1>Featured Products</h1>
    </div>

    <div class="flex">
      {% for product in craft.products.type('clothing').all() %}
        {% if product.featuredProduct %}
          <a href="{{ product.url }}" class="flex">
            <img src="{{ product.productImage.one().getUrl() }}"alt="{{ product.productImage.one().title }}">
            {{- product.title -}}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div id="products-popular-categories">
    <div class="flex h1-wrapper">
      <h1>Popular Product Categories</h1>
    </div>
    <div class="flex">

      {% for category in craft.categories.group('productCategories').all() %}
        <a href="{{ category.url }}"><img src="{{ category.productImage.one().getUrl() }}">
          <h4 class="product-title">{{ category.title }}</h4>
          <p>Learn More</p>
        </a>
      {% endfor %}

    </div>
  </div>

  <div id="products-find">
    <h2>Find Your Perfect Product</h2>

    <div id="find-container">
      <ul>
        <li><a href="/contact">Request Quote</a></li>
        <li><a href="/contact">Request Assistance</a></li>
        <li><a href="{# TODO #}">Product Finder</a></li>
      </ul>
    </div>
  </div>
{% endblock %}
