{% extends '_layouts/shop' %}

{% block content %}

<div class="h1-wrapper-top">
  <h1>{{ category.title }}</h1>
</div>

<div class="category-container">
  {% if craft.products.relatedTo(category)|length %}
    {% for product in craft.products.relatedTo(category).all() %}
      <div class="category-product">
        <a class="category-image" href="{{ product.url }}">
          <img src="{{ product.productImage.one().getUrl('productImage') }}" alt="{{ product.productImage.one().title }}">
        </a>
        <a href="{{ product.url }}">
          <span>{{ product.title }}</span>
        </a>
      </div>
    {% endfor %}
  {% else %}
    <h2>There are no products in this category.</h2>
  {% endif %}
</div>

{% endblock %}
