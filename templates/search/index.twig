{# search form #}

{% extends '_layouts/main' %}

{% block content %}

<div class="search">
  <div class="h1-wrapper-top">
    <h1>Search</h1>
  </div>

  {# search form #}
  <form action="{{ url('search/results') }}" name="search-form">
    <input type="search" name="q" placeholder="Search" autofocus required>
    <input type="submit" value="Go">
  </form>
</div>

{% endblock %}
