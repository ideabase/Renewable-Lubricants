{% set options = {
  markerInfo: '_includes/infoBubble',
  height: 300,
  zoom: 4,
  draggable: true,
  markerOptions: {
    icon: 'https://maps.google.com/mapfiles/ms/icons/green-dot.png'
  },
  infoWindowOptions: {
    maxWidth: 200
  }
} %}

{{ craft.smartMap.map(craft.entries.section('distributors').all(), options) }}

{# see studentmedia advertising accordion, close to identical #}

<section class="section">
  <h2 class="subhead">Distributors</h2>
  {% set distributors = craft.entries.section('distributors') %}
	{% cache %}

  {% for distrib in distributors.all() %}
  <div class="tab">
    <input id="tab-input" type="checkbox" name="tabs" />
    <label for="tab-label">{{distrib.title}}</label>
    <div class="tab-content">
      {% if distrib.body | length %}
        <p>{{distrib.body}}</p>
      {% endif %}
      <div class="tab-content-image">
          {% for image in distrib.logo.all() %}
            <img src="{{image.url}}" alt="{{image.title}}" class="tab-image">
          {% endfor %}
      </div>
    </div>
  </div>
  {% endfor %}


