{% extends "_layout" %}

{% block content %}
  <p>{{ entry.body }}</p>

  <div id="products-featured">
    <h2>Featured Products</h2>
    
    <ul>
      {% for entry in craft.entries.section('products').all() %}
        <li>
          <a href="{{ entry.url }}">{{ entry.title }}
            <img src="{{ entry.productImage.one().url }}">
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>

  <div id="products-categories">
    <h2>Product Categories</h2>

    <ul>
      {% for category in craft.categories.group('productCategories').all() %}
        <li>
          <a href="{{ category.url }}">{{ category.title }}
            {# <img src="{{ category.image.one().url }}"> #}
          </a>
        </li>
      {% endfor %}

      <li>
        <a href="{# TODO #}">View All Products</a>
      </li>
    </ul>
  </div>

  <div id="products-find">
    <ul>
      <a href="{# TODO #}">Request Quote</a>
      <a href="{# TODO #}">Request Assistance</a>
      <a href="{# TODO #}">Product Finder</a>
    </ul>
  </div>
{% endblock %}
