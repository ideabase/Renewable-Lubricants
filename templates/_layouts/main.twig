{# main layout #}
<!DOCTYPE html>
<html lang="en-US">
<head>
  {# include footer #}
  {% include '_globals/head' %}
  {% block head %}{% endblock %}
</head>

<body>
  {% if cart is not defined %}
    {% set cart = craft.commerce.carts.cart %}
  {% endif %}

  {# include header #}
  {% include '_globals/header'%}

  <main>
    {# feature image #}
    {% if entry.featureImage|length %}
      <img src="{{ entry.featureImage.one().getUrl() }}" class="feature-img"/>
    {% endif %}

    {% if entry.subtitle|length %}
      {{ entry.subtitle }}
    {% endif %}

    {# content block #}
    {% block content %}{% endblock %}
  </main>

  {# include footer #}
  {% include '_globals/footer' %}

  {% include '_globals/scripts' %}
</body>
</html>
