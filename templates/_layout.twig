{# layout for most of the singles #}

<!DOCTYPE html>
<html lang="en-US">
<head>
  {% include '_globals/head' %}
  {% block head %}{% endblock %}
</head>

<body>
  {# include the site header #}
  {% include '_globals/header'%}

  <main>
    {# feature image #}
    {% if entry.featureImage|length %}
      <img src="{{ entry.featureImage.one().getUrl() }}"/>
    {% endif %}

    <h1>{{ entry.title }}</h1>

    {% if entry.subtitle|length %}
      {{ entry.subtitle }}
    {% endif %}
  
    {# content block #}
    {% block content %}{% endblock %}
  </main>

  {# include the site footer #}
  {% include '_globals/footer' %}
</body>
</html>
